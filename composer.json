{
    "name": "websitesql/framework",
    "description": "A simple, intuitive, and powerful PHP framework for building APIs.",
    "homepage": "https://www.websitesql.com",
    "minimum-stability": "stable",
    "type": "framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Alan Tiller",
            "email": "alan@alantiller.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "autoload": {
        "psr-4": {
            "WebsiteSQL\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
